{
	"name": "Newsletter AI",
	"build": {
		"dockerfile": "../dockerfile", // Path to Dockerfile relative to .devcontainer
		"context": "../.." // Build context points to repo root
	},
	"remoteUser": "root", // Use root for simplicity
	"workspaceFolder": "/workspaces/newsletter/", // Workspace set to service folder
	"runArgs": [
		"-p", "8080:8080" // Map port 8080 for the app
	],
	"features": {},
	"customizations": {
		"vscode": {
			"extensions": ["ms-python.python"]
		},
		"settings": {
			"python.defaultInterpreterPath": "/usr/local/bin/python3"
		}
	}
}
